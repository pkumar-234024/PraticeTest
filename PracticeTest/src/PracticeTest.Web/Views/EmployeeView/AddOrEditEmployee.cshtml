@using PracticeTest.Core.model;
@model Employee;

<div class="row">
    <h2>Employee Information Form</h2>

    <form action="/EmployeeView/AddOrUpdateEmployee" method="post">
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
        <label for="employeeCode">Employee Code:</label>
        <input type="number" id="employeeCode" name="employeeCode" value="@Model.EmployeeCode" required><br>

        <label for="employeeName">Employee Name:</label>
        <input type="text" id="employeeName" name="employeeName" maxlength="50" value="@Model.EmployeeName" required><br>

        <label for="dateOfBirth">Date of Birth:</label>
        <input type="date" id="dateOfBirth" name="dateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required><br>

        <label for="gender">Gender:</label>
        <td>
            @Html.DropDownListFor(modelItem => modelItem.Gender,
            new List<SelectListItem>
            {
            new SelectListItem { Text = "Male", Value = "true" },
            new SelectListItem { Text = "Female", Value = "false" }
            })
        </td><br>
        

        <label for="department">Department:</label>
        <input type="text" id="department" name="department" maxlength="20" value="@Model.Department" required><br>

        <label for="designation">Designation:</label>
        <input type="text" id="designation" name="designation" maxlength="20" value="@Model.Designation" required><br>

        <label for="basicSalary">Basic Salary:</label>
        <input type="number" id="basicSalary" name="basicSalary" step="0.01" value="@Model.BasicSalary" required><br>

        <input type="submit" value="Submit">

    </form>

</div>
